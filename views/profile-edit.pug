extends homepage.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users/profile/edit' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', `${user.email}`, email)
        +field('First Name', 'firstName', `${user.firstName}`, firstName)
        +field('Last Name', 'lastName', `${user.lastName}`, lastName)
        +field('Username', 'username', `${user.username}`, username)
        +field('Password', 'password', `${user.password}`, null, 'password')
        div(class='py-4')
        button(type='submit' class='login-btn') Submit Edit
        a(href='/users/profile' class='cancel-btn') Cancel
