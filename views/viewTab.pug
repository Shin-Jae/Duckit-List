extends homepage.pug

append head
    script(src="/javascripts/viewTabs.js" type="module")

block content

    div.tables
        a(href="/lists/").lists #{list.name}
        //- a(href=`/lists/${list.id}`).completeTask Completed
        //- a(href=`/lists/${list.id}`).incompleteTask Incomplete

    div.dataTables
        div(style="margin-top:20px; width:100%;").lists
        each list in lists
            div.list-container
            a(href=`/lists/${task.Task.id}`).task
                img(src=task.Task.image style="width:100px; border-radius:50%;")
            div.inner
                div(style="font-weight:bold; padding:10px;")= task.Task.name
                div().content=`Description: ${task.Task.description}`
        div(style="margin-top:20px; width:100%;").completedTasksTable
        each task in tasks
            div.completeTask
            a(href=`/lists/${task.Task.id}`).pic
                img(src=task.image style="width:100px; border-radius:50%;")
            div.inner
                div(style="font-weight:bold; padding:10px;")= task.name
                div().content=`Description: ${task.description}`
