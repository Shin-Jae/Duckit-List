extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', email)
        +field('Password', 'password', null, 'password')
        div(class='py-4')
        button(type='submit' class='login-btn') Login
        a(href='/home' class='cancel-btn') Cancel
    div(class='demo-login')
    form(action='/users/login' class='demo-btn', method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        button(type='submit' class='demo-user-login') Demo
    div
        p: a(href='/users/signup') Don't have an account?
