extends layout.pug

include utils.pug

append head
    //- script(src="/javascripts/demo.js" type="module")
    link(rel='stylesheet' href='/stylesheets/login.css')

block content
    +validationErrorSummary(errors)
    div(class="main-login-container")
        div(class="login-container-left-half")
            p A journey of a thousand miles must begin with a single step.
            p -Lao Tzu
        div(class="login-container-right-half")
            form(action='/users/login' id="loginForm" method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
                +field('Email Address', 'email', email)
                +field('Password', 'password', null, 'hashedPassword')
                div(class='login')
                button(type='submit' class='login-btn') Login
                a(href='/home' class='cancel-btn') Cancel
                div(class='demo-login')
            form(action='/users/login/demo' id="demoLoginForm" class='demo-btn', method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type='submit' class='demo-user-login' id='demo-user-btn') Demo
            p: a(href='/users/signup') Don't have an account?
