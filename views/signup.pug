extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users/signup' method='post')
        input(type='hidden' name="_csrf" value=csrfToken)
        +field("First Name", "firstName", user.firstName)
        +field("Last Name", "lastName", user.lastName)
        +field("Username", "username", user.username)
        +field("Email", "email", user.email)
        +field("Password", "password", user.password)
        +field("Confirm Password", "confirmPassword", user.confirmPassword)
        button(type="submit") Submit
        a(href="/home")
    div
        p: a(href='/users/login') Already have an account?
