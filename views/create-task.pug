extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/tasks/new' method='post')
    +field('Description', 'description', description)
    +field('Cost', 'cost', cost)
    +field('Timeframe', 'timeframe', timeframe)
    +field('Upload an image', 'image', image)
    +field('Category', 'category', category)
    div(class='form-submit')
    button(type='submit' class='submit-btn') Duck it!
    a(href='/' class='cancel-btn') Cancel
