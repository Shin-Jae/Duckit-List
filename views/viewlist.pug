extends homepage.pug

include utils.pug

block content
  a(href="/lists/new" class="add-to-list-button") Create new List
  each list in lists
    ul
      div(id=`container-${list.id}`).container
        li= `List: ${list.name}`
          button(class='edit-btn' id=`edit-btn-${list.id}`) Edit
          button(class='delete-btn' id=`delete-btn-${list.id}`) Delete
          a(href='/tasks/new') Hatch a new goal!
            each task in list.dataValues.Tasks
              li= `--Tasks: ${task.description}`
                input(type='checkbox')










































                  div
                    each task in tasks
                    button(class='task-edit-btn' id=`edit-btn-${task.id}`) Edit
                    button(class='task-delete-btn' id=`delete-btn-${task.id}`) Delete
