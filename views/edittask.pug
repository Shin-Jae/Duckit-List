extends modal.pug

include utils.pug

append head
  script(src="/javascripts/taskButtons.js" type="module")
  link(rel="stylesheet" href="/stylesheets/editform.css")

block template
  div.container
    h2(id='edit-task-description')
    p Woud you like to edit your Task?
      +validationErrorSummary(errors)
      div(id='task-errors' style='color: red')
      form(id='edit-task-form')
        input(type='hidden' name="_csrf" class='csrf-token')
        label(for=description) Description
        input(type="text" class='task-description' description=description value="task.description")
        label(for=timeframe) Timeframe
        input(type="date" id=`task-timeframe-${"task.id"}` timeframe=timeframe value="task.timeframe")
        label(for=cost) Cost
        input(type="number" min="0" id=`task-cost-${"task.id"}` cost=cost value="task.cost")
        label(for=image) Image
        input(type="text" id=`task-image-${"task.id"}` image=image value="task.image")
        label(for=completed) Completed?
        select(id=`task-completed-${"task.id"}` completed=completed)
          option(id='no') No
          option(id='yes') Yes

        //- label(for=category) Category
        //- input(type=text id=`task-category-${"task.id"}` category=category placeholder=task.category)
        div(class='form-submit')
        button(type='button' class='tasksubmit-btn' id=`edit-submit-${"task.id"}`) Save
        a(href='/lists' class='cancel-btn') Cancel
        //- button(type='button' id='test-button') TEST
